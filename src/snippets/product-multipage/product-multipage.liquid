{%- assign current_variant = product.selected_or_first_available_variant -%}

{% comment %} *** calculate visible variant image *** {% endcomment %}

{% assign options_string = '' %}

{% for option_key in product.options %}
  {% assign options_string = options_string | append: option_key | append: ': ' | append: current_variant.options[forloop.index0] | append: ' | ' %}
{% endfor %}

{%- assign variant_image_src = '' -%}
{%- assign variant_image_mobile_src = '' -%}

{%- assign options_string_list = options_string | split: ' | ' -%}

{% for options_string_item in options_string_list %}
  {% for item in product.media %}
    {% unless item.alt contains 'GREAT_QUALITY' %}
      {% if item.alt contains options_string_item or item.alt contains 'PRODUCT' %}
        {% if item.alt contains 'MOBILE' %}
          {% if variant_image_mobile_src == blank %}
            {%- assign variant_image_mobile_src = item.src | img_url: '828x1036' -%}
          {% endif %}
        {% else %}
          {% if variant_image_src == blank %}
            {%- assign variant_image_src = item.src | img_url: '1418x1500' -%}
          {% endif %}
        {% endif %}
      {% endif %}
    {% endunless %}
  {% endfor %}
{% endfor %}

{%- assign product_meta = product.metafields.store -%}
{%- assign variant_meta = current_variant.metafields.store -%}

<div
  class="product-multipage"
  data-snippet="product-multipage"
>
  <div
    class="product-multipage__in"
    :data-variant-id="activeVariantId"
    :data-loaded
  >
    <div
      class="product-multipage__popup"
      :class="{ 'product-multipage__popup--open': isOpenPopup }"
    >
      <div
        class="product-multipage__popup-background"
        @click="togglePopup(false)"
      ></div>

      <div class="product-multipage__popup-content">
        <div
          class="product-multipage__popup-slider splide"
          data-product-multipage-popup
        >
          <div class="product-multipage__popup-slider-track splide__track">
            <ul class="product-multipage__popup-slider-list splide__list">
              <li
                class="product-multipage__popup-slider-item splide__slide"
                v-for="image in variantPopupNormalizedImages"
              >
                <img
                  :src="image.src"
                  :alt='pageTitle + " sku:" + image.alt'
                >
              </li>
            </ul>
          </div>
        </div>

        <button
          class="product-multipage__popup-close"
          @click="togglePopup(false)"
        >
          <span class="visually-hidden">Close popup</span>
        </button>
      </div>
    </div>

    <div
      class="product-multipage__preview"
      :class="{ 'product-multipage__preview--hidden': isOpenPopup }"
    >
      <div
        class="product-multipage__preview-simple"
        v-if="variantImages.length == 1"
        :key="variantImages[0].src"
      >
        {% if variant_image_src != blank %}
          <img
            class="product-multipage__preview-simple-image"
            :alt="variantImages[0].alt"
            alt="Product image"
            :src="variantImages[0].src"
            src="{{ variant_image_src }}"
          >
        {% endif %}

        {% if variant_image_mobile_src != blank %}
          <img
            class="product-multipage__preview-simple-image product-multipage__preview-simple-image--mobile"
            :alt="variantImages[0].alt"
            alt="Product image"
            :src="variantImages[0].src"
            src="{{ variant_image_mobile_src }}"
          >
        {% endif %}
      </div>

      <div
        class="product-multipage__slider"
        v-if="variantImages.length > 1"
      >
        <div
          class="product-multipage__slider-carousel splide"
          data-product-multipage-slider
        >
          <div class="product-multipage__slider-track splide__track">
            <ul class="product-multipage__slider-list splide__list">
              <li
                class="product-multipage__slider-image splide__slide"
                v-for="image in variantImages"
              >
                <img
                  :src="image.src"
                  :alt='pageTitle + " sku:" + image.alt'
                >
              </li>
            </ul>
          </div>

          <button
            class="product-multipage__slider-image-icon"
            v-if="hasPopupImages"
            @click="togglePopup()"
          >
            <span class="visually-hidden">Open large image</span>
          </button>
        </div>
      </div>
    </div>

    <div class="product-multipage__product-wr">
      <div class="product-multipage__product">
        <div class="product-multipage__product-main">
          <h1
            class="product-multipage__product-title"
            v-html="pageTitle"
          >
            {% if variant_meta.title %}
              {{ variant_meta.title }}
            {% elsif product_meta.title %}
              {{ product_meta.title }}
            {% else %}
              {{ product.title }}
            {% endif %}
          </h1>
        </div>

        <div class="product-multipage__product-blocks">
          {% for block in blocks %}
            {% if block.type == '@app' %}
              <div class="product-multipage__product-block">
                {% render block %}
              </div>
            {% endif %}
          {% endfor %}

          {% if product_meta.pre_order_text %}
            <div class="product-multipage__product-info-title">
              FREE Shipping/Returns
            </div>
          {% endif %}
        </div>

        <form
          class="product-multipage__product-form"
          @submit="formSubmit"
          method="post"
          accept-charset="UTF-8"
          enctype="multipart/form-data"
          data-product-form=""
          data-product-handle="stainless-steel-frying-pan"
        >
          <input type="hidden" name="form_type" value="product">
          <input type="hidden" name="utf8" value="âœ“">
          <input
            type="hidden"
            name="id"
            :value="activeVariantId"
            value="{{ current_variant.id }}"
          >

          {% assign default_product_option = product.options | first %}

          {% if default_product_option != 'Title' %}
            <div class="product-multipage__product-options">
              <div
                class="product-multipage__product-option"
                v-for="(key, index) in optionsKeyOrder"
              >
                <div
                  class="product-multipage__product-option-in"
                  v-if="isColoredOptionsGroup(key)"
                >
                  <div class="product-multipage__product-option-title">
                    <div
                      class="product-multipage__product-option-title-head"
                      v-html="key"
                    >
                      {{ default_product_option }}
                    </div>

                    &nbsp;

                    <span
                      class="product-multipage__product-option-title-value"
                      v-html="makeOptionsGroupValue(key)"
                    ></span>

                    <button
                      class="product-multipage__product-option-title-size-guide"
                      data-drawer-open-size-guide
                      v-if="isVisibleSizeGuide(index)"
                    >
                      Size Guide
                    </button>
                  </div>

                  <div class="product-multipage__product-option-colors">
                    <template v-for="value in variantOptions[key]">
                      <button
                        v-if="!isSeasonalColor(key, value)"
                        class="product-multipage__product-option-color"
                        :class="
                          [
                            {'product-multipage__product-option-color--active': isActiveOption(key, value)},
                            {'product-multipage__product-option-color--sold-out': isSoldOutOption(key, value) },
                          ]
                        "
                        :style="{ 'border-color': calcOptionColor(key, value) }"
                        :title="makeOptionTitle(key, value)"
                        type="button"
                        @click="changeOption(key, value)"
                        :disabled="isUnavailableOption(key, value)"
                      >
                        <div
                          class="product-multipage__product-option-color-bg"
                          :style="{ 'background': calcOptionColor(key, value) }"
                        ></div>

                        <span
                          class="visually-hidden"
                          v-html="makeOptionDisplayValue(key, value)"
                        ></span>

                        <span
                          class="product-multipage__product-option-color-slash"
                          v-if="isSoldOutOption(key, value)"
                        ></span>
                      </button>
                    </template>
                  </div>

                  <template v-if="seasonalProductsIds.length">
                    <div class="product-multipage__product-option-title product-multipage__product-option-title--seasonal">
                      <div class="product-multipage__product-option-title-head">
                        Seasonal Color
                      </div>

                      &nbsp;

                      <span
                        class="product-multipage__product-option-title-value"
                        v-html="makeOptionsGroupValue(key, true)"
                      ></span>
                    </div>

                    <div class="product-multipage__product-option-colors">
                      <template v-for="value in variantOptions.Color">
                        <button
                          v-if="isSeasonalColor(key, value)"
                          class="product-multipage__product-option-color"
                          :class='
                            [
                              {"product-multipage__product-option-color--active": isActiveOption(key, value)},
                              {"product-multipage__product-option-color--sold-out": isSoldOutOption(key, value) },
                            ]
                          '
                          :style="
                            {
                              'border-color': calcOptionColor(key, value)
                            }
                          "
                          :title="makeOptionTitle(key, value)"
                          type="button"
                          @click="changeOption(key, value)"
                          :disabled="isUnavailableOption(key, value)"
                        >
                          <div
                            class="product-multipage__product-option-color-bg"
                            :style="{ 'background': calcOptionColor(key, value) }"
                          ></div>

                          <span
                            class="visually-hidden"
                            v-html="makeOptionDisplayValue(key, value)"
                          ></span>

                          <span
                            class="product-multipage__product-option-color-slash"
                            v-if="isSoldOutOption(key, value)"
                          ></span>
                        </button>
                      </template>
                    </div>
                  </template>
                </div>

                <div
                  class="product-multipage__product-option-in"
                  v-if="isSizeOptionsGroup(key)"
                >
                  <div class="product-multipage__product-option-sizes">
                    <div
                      v-for="value in variantOptions[key]"
                      class="product-multipage__product-option-size-wr"
                    >
                      <button
                        class="product-multipage__product-option-size"
                        :class='
                          [
                            {"product-multipage__product-option-size--active": isActiveOption(key, value) },
                            {"product-multipage__product-option-size--sold-out": isSoldOutOption(key, value) },
                          ]
                        '
                        :disabled="isUnavailableOption(key, value)"
                        :title="makeOptionTitle(key, value)"
                        type="button"
                        @click="changeOption(key, value)"
                      >
                        <span v-html="makeOptionDisplayValue(key, value)">
                          {{ current_variant.option1 }}
                        </span>

                        <span
                          class="product-multipage__product-option-size-slash"
                          v-if="isUnavailableOption(key, value)"
                        ></span>
                      </button>
                    </div>
                  </div>
                </div>

                <div
                  class="product-multipage__product-option-in"
                  v-if="isRegularOptionsGroup(key)"
                >
                  <div class="product-multipage__product-option-title">
                    <div
                      class="product-multipage__product-option-title-head"
                      v-html="key"
                    >
                      {{ product.options | first }}
                    </div>

                    <button
                      class="product-multipage__product-option-title-size-guide"
                      data-drawer-open-size-guide
                      v-if="isVisibleSizeGuide(index)"
                    >
                      Size
                    </button>
                  </div>

                  <div class="product-multipage__product-option-values">
                    <div
                      class="product-multipage__product-option-value-wr"
                      v-for="value in variantOptions[key]"
                    >
                      <button
                        class="product-multipage__product-option-value"
                        :class='
                          [
                            {"product-multipage__product-option-value--active": isActiveOption(key, value) },
                            {"product-multipage__product-option-value--sold-out": isSoldOutOption(key, value) },
                          ]
                        '
                        :title="makeOptionTitle(key, value)"
                        v-html="makeOptionDisplayValue(key, value)"
                        @click="changeOption(key, value)"
                        :disabled="isUnavailableOption(key, value)"
                        type="button"
                      >
                        {{ current_variant.option1 }}
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {% endif %}

          <div class="product-multipage__product-button-wr">
            <button
              class="product-multipage__product-button"
              :disabled="!isAvailableCurrentVariant()"
              type="submit"
            >
              <span v-if="isAvailableCurrentVariant()">
                Add to your cart â€”
                <span
                  class="product-multipage__product-button-price"
                  :class='{"product-multipage__product-button-price--old": priceDiscount }'
                  v-html="priceOriginal"
                ></span
                >&nbsp;

                <span
                  v-if="priceDiscount"
                  class="product-multipage__product-button-price product-multipage__product-button-price--new"
                  v-html="priceDiscount"
                ></span>
              </span>

              <span
                class="product-multipage__product-button-price"
                v-if="!isAvailableCurrentVariant()"
              >
                Sold Out
              </span>
            </button>

            <p
              class="product-multipage__product-button-discount"
              v-if="textDiscount"
              v-html="textDiscount"
            ></p>
          </div>
        </form>

        <a
          class="product-multipage__product-klaviyo-trigger klaviyo-bis-trigger"
          href="#"
          v-if="!isAvailableCurrentVariant()"
          @click="subscribeNotifyMeEvent()"
        >
          Notify Me When Available
        </a>

        <div
          class="product-multipage__product-klarna"
          v-for="variant in variants"
          :class='{ "product-multipage__product-klarna--hidden": activeVariantId != variant.id }'
          :data-id="variant.id"
          :data-active-id="activeVariantId"
        >
          <klarna-placement
            data-key="credit-promotion-auto-size"
            data-locale="en-US"
            :data-purchase-amount="variant.price"
          ></klarna-placement>

          <div class="product-multipage__sep"></div>
        </div>

        {% assign _detaiils = '' %}

        {% if variant_meta.details %}
          {% assign _detaiils = variant_meta.details %}
        {% elsif product_meta.details %}
          {% assign _detaiils = product_meta.details %}
        {% endif %}

        {% if _detaiils != blank %}
          <div class="product-multipage__product-details">
            <div class="product-multipage__product-details-title">
              Product Details
            </div>

            <div
              class="product-multipage__product-details-title-text"
              v-html="activeProduct.details"
            >
              {{ _detaiils | newline_to_br }}
            </div>
          </div>

          <div
            class="product-multipage__sep product-multipage__sep--muted"
          ></div>
        {% endif %}

        {% if product_meta.shipping_information %}
          <div
            class="product-multipage__product-shipping-info"
            data-location="US"
            data-location-active="false"
          >
            {{ product_meta.shipping_information | newline_to_br }}
          </div>
        {% endif %}

        {% if product_meta.shipping_information_canada %}
          <div
            class="product-multipage__product-shipping-info"
            data-location="CA"
            data-location-active="false"
          >
            {{ product_meta.shipping_information_canada | newline_to_br }}
          </div>
        {% endif %}

        {% if variant_meta.description != blank %}
          {% assign _description = variant_meta.description %}
        {% elsif product_meta.description != blank %}
          {% assign _description = product_meta.description %}
        {% else %}
          {% assign _description = product.description %}
        {% endif %}

        {% if _description != blank %}
          <div
            class="product-multipage__product-description"
            v-html="activeProduct.description"
          >
            {{ _description | newline_to_br }}
          </div>
        {% endif %}

        <div class="product-multipage__product-info">
          {% if product_meta.is_read_more_type_2 == true or product_meta.is_read_more_type_2 == false %}
            <div class="product-multipage__product-info-more-wr">
              <button
                class="product-multipage__product-info-more"
                type="button"
                {% if product_meta.is_read_more_type_2 == true %}
                  data-drawer-open-more-info-new
                {% elsif product_meta.is_read_more_type_2 == false %}
                  data-drawer-open-more-info
                {% endif %}
              >
                More Information
              </button>
            </div>
          {% endif %}

          <div class="product-multipage__product-info-favorite">
            <!-- include 'wishlist-button-product' with: '{{ product.id }}' -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% unless product == empty %}
  <script
    type="application/json"
    data-product-json
  >
    {{ product | json }}
  </script>
{% endunless %}
