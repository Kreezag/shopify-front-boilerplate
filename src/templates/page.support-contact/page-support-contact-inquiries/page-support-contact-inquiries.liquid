              data-field
            >

            <span> Last name* </span>
          </label>

          <label
            class="page-support-contact-inquiries__form-label"
            data-control
            data-error
            data-email-error
            data-required-error="Required"
          >
            <input
              type="email"
              placeholder="Your Email Address"
              name="email"
              data-field
            >

            <span> Email Address* </span>
          </label>

          <label
            class="page-support-contact-inquiries__form-label"
            data-error
            data-required-error="Required"
            data-control
          >
            <select
              data-field
              name="product"
              required
            >
              <option
                selected
                disabled
                hidden
              ></option>

              {% for product in collections.all.products %}
                {% if product.available and product.type != 'Test' %}
                  <option
                    value="{{ product.title }}"
                    data-select-item
                  >
                    {% if product.metafields.store.title_option %}
                      {{ product.metafields.store.title_option }}
                    {% else %}
                      {{ product.title }}
                    {% endif %}
                  </option>
                {% endif %}
              {% endfor %}
            </select>

            <span> Select Product* </span>
          </label>

          <label
            class="page-support-contact-inquiries__form-label"
            data-control
            data-error
            data-required-error="Required"
          >
            <textarea
              placeholder="User input"
              data-field
              name="message"
            ></textarea>

            <span> Message* </span>
          </label>
        </fieldset>

