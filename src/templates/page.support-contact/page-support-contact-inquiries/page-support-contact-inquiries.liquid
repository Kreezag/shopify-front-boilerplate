      data-support-contact-inquiries-forms
    >
      <label class="page-support-contact-inquiries__form-label">
        <select
          data-field
          data-form-select
          required
        >
          <option
            disabled
            selected
            hidden
          >
            What do you need help with?
          </option>

          <option value="general">General Inquiries</option>

          <option value="product">Product Inquiries</option>

          <option value="press">Press Inquiries</option>

          <option value="wholesale">Wholesale Inquiries</option>

          <option value="careers">Careers Inquiries</option>
        </select>

        <span> Topic </span>
      </label>

      <form
        class="page-support-contact-inquiries__form"
        id="general"
        data-hidden="true"
        data-submit-url="{{ form_submit_url }}"
      >
        <input
          type="hidden"
          name="trap"
          data-field
        >

        <input
          type="hidden"
          name="type"
          value="general"
          readonly
          data-field
        >

        <fieldset class="page-support-contact-inquiries__form-fieldset">
          <label
            class="page-support-contact-inquiries__form-label"
            data-control
            data-error
            data-required-error="Required"
            data-spec-symbol-error="Valid characters includes A-z, 0-9, ' and -"
          >
            <input
              type="text"
              placeholder="Your First name"
              name="first_name"
              data-field
            >

            <span> First name* </span>
          </label>

          <label
            class="page-support-contact-inquiries__form-label"
            data-control
            data-error
            data-required-error="Required"
            data-spec-symbol-error="Valid characters includes A-z, 0-9, ' and -"
          >
            <input
              type="text"
              placeholder="Your Last name"
              name="last_name"
              data-field
            >

            <span> Last name* </span>
          </label>

          <label
            class="page-support-contact-inquiries__form-label"
            data-control
            data-error
            data-required-error="Required"
            data-email-error
          >
            <input
              type="email"
              placeholder="Your Email Address"
              name="email"
              data-field
            >

            <span> Email Address* </span>
          </label>

          <label
            class="page-support-contact-inquiries__form-label"
            data-control
            data-error
            data-required-error="Required"
          >
            <textarea
              placeholder="User input"
              data-field
              name="message"
            ></textarea>

            <span> Message* </span>
          </label>
        </fieldset>

        <button
          class="page-support-contact-inquiries__form-btn"
          type="submit"
        >
          Submit
        </button>
      </form>

