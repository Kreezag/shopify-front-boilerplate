<section
  class="page-support-contact-inquiries"
  data-section="page-support-contact-inquiries"
>
  <div class="page-support-contact-inquiries__container">
    <h2 class="page-support-contact-inquiries__title">
      {{ section.settings.title }}
    </h2>

    <div
